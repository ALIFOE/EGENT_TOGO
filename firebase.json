{
  "firestore": {
    "rules": "FIRESTORE_RULES.txt",
    "indexes": "firestore.indexes.json",
    "database": "(default)"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "codebase": "default"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "prerender"
      },
      {
        "source": "/article/**",
        "function": "prerender"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
